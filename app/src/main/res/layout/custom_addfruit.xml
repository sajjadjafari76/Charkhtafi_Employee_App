<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/CustomOrder_View2"
            android:gravity="center">

            <Spinner
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/CustomOrderAddFruit_Weight"
                android:layout_toRightOf="@id/CustomOrderAddFruit_Weight"
                android:layout_alignBottom="@+id/CustomOrderAddFruit_Weight"/>

            <www.charkhtafi.com.charkhtafi.Utils.Views.CustomEdittext
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:id="@+id/CustomOrderAddFruit_Weight"
                android:layout_marginRight="8dp"
                android:textSize="13sp"
                android:gravity="center"
                android:background="@drawable/shape_custom_total_edittext"/>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="130dp"
            android:layout_height="35dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="3dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/CustomAddFruit_Add"
            android:layout_below="@+id/CustomOrder_View2"
            android:layout_alignParentLeft="true">

            <www.charkhtafi.com.charkhtafi.Utils.Views.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF1488D5"
                android:text="اضافه"
                android:textColor="#FFF"
                android:gravity="center"
                android:textSize="13sp"
                android:padding="5dp"
                android:drawableRight="@drawable/ic_add"/>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</android.support.v7.widget.CardView>